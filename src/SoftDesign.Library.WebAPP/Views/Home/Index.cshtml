@model SoftDesign.Library.Cross.Core.ViewModels.DashboardViewModel

@{
    ViewBag.Title = "Home";
}

<div class="dashboard-container">
    <div class="dashboard-card">
        <div class="card-icon">
            <i class="fas fa-book"></i>
        </div>
        <h2 class="card-title">Total Books</h2>
        <div class="card-value">@Model.TotalBookCount</div>
        <div class="card-subtitle">In Library Collection</div>
    </div>

    <div class="dashboard-card">
        <div class="card-icon">
            <i class="fas fa-book-reader"></i>
        </div>
        <h2 class="card-title">Currently Rented</h2>
        <div class="card-value">@Model.RentedBookCount</div>
        <div class="card-subtitle">Books in Circulation</div>
    </div>

    <div class="dashboard-card">
        <div class="card-icon">
            <i class="fas fa-user-friends"></i>
        </div>
        <h2 class="card-title">Active Renters</h2>
        <div class="card-value">@Model.ActiveRenterCount</div>
        <div class="card-subtitle">Book Enthusiasts</div>
    </div>

    <div class="dashboard-card">
        <div class="card-icon">
            <i class="fas fa-chart-line"></i>
        </div>
        <h2 class="card-title">Greatest renter</h2>
        <div class="card-value">@Model.GreatestRenter</div>
        <div class="card-subtitle">All time</div>
    </div>

    <div class="dashboard-card">
        <div class="card-icon">
            <i class="fas fa-star"></i>
        </div>
        <h2 class="card-title">Featured Book</h2>
        <div class="featured-book-info">
            <strong>@Model.FeaturedBook.Title</strong>
            <p>By @Model.FeaturedBook.Author</p>
        </div>
    </div>

    <div class="dashboard-card">
        <div class="card-icon">
            <i class="fas fa-arrow-trend-up"></i>
        </div>
        <h2 class="card-title">Most rented book</h2>
        <div class="featured-book-info">
            <strong>@Model.MostRentedBook.Title</strong>
            <p>By @Model.MostRentedBook.Author</p>
        </div>
    </div>
</div>